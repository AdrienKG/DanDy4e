<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="cslvr_small_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:layout_marginEnd">@dimen/component_horizontal_margin</item>
    </style>

    <style name="cc_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="cc_text_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_toEndOf">@id/cc_name_label</item>
    </style>

    <style name="fdet_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="fdet_label_L" parent="fdet_label">
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="fdet_label_M" parent="fdet_label">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="fdet_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_toEndOf">@id/fdet_paragon_label</item>
		<item name="android:textAlignment">center</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
